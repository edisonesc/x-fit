<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".EditProfileActivity">
    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/black_overlay">

            <TextView
                android:paddingTop="5dp"
                android:id="@+id/titleWorkout"
                android:textSize="45sp"
                android:text="Profile"
                android:gravity="center"
                android:textColor="#fff"
                android:fontFamily="@raw/ostrich_black"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp">



        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">
                <LinearLayout
                    android:background="@color/colorPrimaryDark"
                    android:layout_width="match_parent"
                    android:id="@+id/editName"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_height="match_parent">
                    <TextView

                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Name"
                        android:textColor="#fff"
                        android:gravity="left|center"
                        android:textSize="20sp"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/nameMain"
                        android:layout_weight="1"
                        android:layout_marginEnd="10dp"
                        android:textColor="#fff"
                        android:textSize="20sp"
                        android:gravity="center|right"
                        android:text="justin"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="10dp">
                <LinearLayout
                    android:background="@color/colorPrimaryDark"
                    android:layout_width="match_parent"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:id="@+id/editUsername"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_height="match_parent">
                    <TextView

                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Username"
                        android:textColor="#fff"

                        android:gravity="left|center"
                        android:textSize="20sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="#fff"
                        android:textSize="20sp"
                        android:id="@+id/usernameMain"
                        android:gravity="center|right"
                        android:layout_marginEnd="10dp"
                        android:text="justin"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="10dp">
                <LinearLayout
                    android:background="@color/colorPrimaryDark"
                    android:layout_width="match_parent"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:id="@+id/editAge"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_height="match_parent">
                    <TextView

                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Age"
                        android:textColor="#fff"

                        android:gravity="left|center"
                        android:textSize="20sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="#fff"
                        android:textSize="20sp"
                        android:id="@+id/ageMain"
                        android:gravity="center|right"
                        android:layout_marginEnd="10dp"
                        android:text="justin"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="10dp">
                <LinearLayout
                    android:background="@color/colorPrimaryDark"
                    android:layout_width="match_parent"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/editWeight"
                    android:layout_height="match_parent">
                    <TextView

                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Weight"
                        android:textColor="#fff"

                        android:gravity="left|center"
                        android:textSize="20sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="#fff"
                        android:textSize="20sp"
                        android:gravity="center|right"
                        android:id="@+id/weightMain"
                        android:layout_marginEnd="10dp"
                        android:text="justin"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="10dp">
                <LinearLayout
                    android:background="@color/colorPrimaryDark"
                    android:layout_width="match_parent"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:id="@+id/mHeightSetting"
                    android:focusable="true"
                    android:layout_height="match_parent">
                    <TextView

                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Height"
                        android:textColor="#fff"

                        android:gravity="left|center"
                        android:textSize="20sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="#fff"
                        android:textSize="20sp"
                        android:id="@+id/heightMain"
                        android:gravity="center|right"
                        android:layout_marginEnd="10dp"
                        android:text="justin"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="10dp">
                <LinearLayout
                    android:background="@color/colorPrimaryDark"
                    android:id="@+id/editAccountSetting"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView

                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Account Settings"
                        android:textColor="#fff"

                        android:gravity="left|center"
                        android:textSize="20sp"
                        android:layout_weight="2"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>



        </LinearLayout>




    </RelativeLayout>

</android.support.constraint.ConstraintLayout>